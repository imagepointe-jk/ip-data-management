<br />
<div style="font-weight: bold;">Cart</div>
<table style="border-collapse: collapse;">
  <thead>
    <tr>
      <th
        style="border: 1px solid black; padding: 8px; background-color: lightgray;"
      >Name</th>
      <th
        style="border: 1px solid black; padding: 8px; background-color: lightgray;"
      >Quantity</th>
      <th
        style="border: 1px solid black; padding: 8px; background-color: lightgray;"
      >Price</th>
      <th
        style="border: 1px solid black; padding: 8px; background-color: lightgray;"
      >Tax</th>
    </tr>
  </thead>
  <tbody>
    {{#each lineItems}}
      <tr>
        <td style="border: 1px solid black; padding: 8px;">{{name}}</td>
        <td style="border: 1px solid black; padding: 8px;">{{quantity}}</td>
        <td style="border: 1px solid black; padding: 8px;">${{total}}</td>
        <td style="border: 1px solid black; padding: 8px;">${{totalTax}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
{{#if feeLines.length}}
  <br />
  <br />
  <div style="font-weight: bold;">Fees</div>
  <table style="border-collapse: collapse;">
    <thead>
      <tr>
        <th
          style="border: 1px solid black; padding: 8px; background-color: lightgray;"
        >Name</th>
        <th
          style="border: 1px solid black; padding: 8px; background-color: lightgray;"
        >Total</th>
      </tr>
    </thead>
    <tbody>
      {{#each feeLines}}
        <tr>
          <td style="border: 1px solid black; padding: 8px;">{{name}}</td>
          <td style="border: 1px solid black; padding: 8px;">${{total}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <br />
  <br />
{{/if}}
<div><span style="font-weight: bold">Subtotal: </span>${{subtotal}}</div>
<div><span style="font-weight: bold">Total Tax: </span>${{totalTax}}</div>
